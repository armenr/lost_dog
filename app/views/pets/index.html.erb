<h1>All Pets</h1>

<div>
  <%= link_to "Create a new entry", new_pet_path %>
</div>

<table>
  <thead>
  <tr>
    <td>Name</td>
    <td>Breed</td>
    <td>Color</td>
    <td>/</td>
  </tr>
  </thead>
  <tbody>
  <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.breed %></td>
        <td><%= pet.color %></td>
        <td><%= link_to "View", pet_path(pet) %></td>
      </tr>
  <% end %>
  </tbody>
</table>
